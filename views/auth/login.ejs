
<h2>Login</h2>
<% if (error) { %>
<p style="color: red"><%= error %></p>
<% } %>
<form action="/auth/login" method="POST">
  <label>Email:</label>
  <input type="email" name="email" required />
  <label>Password:</label>
  <input type="password" name="password" required />
  <button type="submit">Login</button>
</form>
