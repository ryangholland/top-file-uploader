<div class="container mt-5">
  <!-- Back Button -->
  <a href="javascript:history.back()" class="btn btn-secondary mb-3">← Back</a>

  <!-- File Details Card -->
  <div class="card shadow-lg w-600">
    <div class="card-body">
      <h4 class="card-title text-center">📄 <%= file.name %></h4>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Size: </strong><%= (file.size / 1024).toFixed(2) %> KB</li>
        <li class="list-group-item"><strong>Created: </strong><%= file.uploadTime.toLocaleString() %></li>
        <li class="list-group-item">
          <strong>Last Updated:</strong> Yesterday
        </li>
      </ul>
      <div class="text-center mt-3">
        <a href="/download/#" class="btn btn-primary">Download File</a>
      </div>
    </div>
  </div>
</div>
